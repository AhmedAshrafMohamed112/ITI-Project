@model StudentPlatform.Models.Attendance

@{
    ViewData["Title"] = "Delete Attendance";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url("/images/uni2.jpg"); 
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 50px auto;
        background-color: rgba(0, 0, 0, 0.7); 
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px;
        font-size: 2.5rem; 
        font-weight: 900; 
        text-transform: uppercase; 
        letter-spacing: 1px; 
    }

    dl.row dt {
        font-weight: bold;
    }

    dl.row dd {
        margin-bottom: 10px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 700;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-right: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .notice {
        padding: 10px;
        margin-bottom: 20px;
        background-color: rgba(255, 0, 0, 0.7); 
        color: #fff;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
    }

    h1 {
        color: #007bff; 
    }

    footer {
        color: #fff;
        text-align: center;
        padding: 1rem;
        position: absolute;
        bottom: 0;
        width: 100%;
        box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
    }
</style>
<h1><strong>Delete Attendance</strong></h1>
<hr />

<div>
    <h4><strong>Are you sure you want to delete this?</strong></h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                <strong>Date</strong>
            </dt>
            <dd class="col-sm-10">
                @Model.Date.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                <strong>Student</strong>
            </dt>
            <dd class="col-sm-10">
                @(Model.Student != null ? Model.Student.FirstName : "None")
            </dd>
            <dt class="col-sm-2">
                <strong>Course</strong>
            </dt>
            <dd class="col-sm-10">
                @(Model.Course != null ? Model.Course.CourseName : "None")
            </dd>
            <dt class="col-sm-2">
                <strong>Admin</strong>
            </dt>
            <dd class="col-sm-10">
                @(Model.Admin != null ? Model.Admin.AdminName : "None")
            </dd>
            <dt class="col-sm-2">
                <strong>Is Present</strong>
            </dt>
            <dd class="col-sm-10">
                @Model.IsPresent
            </dd>
        </dl>
    </div>


    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.AttendanceId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
