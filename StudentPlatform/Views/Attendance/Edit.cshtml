@model StudentPlatform.Models.Attendance

@{
    ViewData["Title"] = "Edit Attendance";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url("/images/uni2.jpg"); 
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 50px auto;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px;
        font-size: 2.5rem; 
        font-weight: 900; 
        text-transform: uppercase; 
        letter-spacing: 1px; 
    }

    h1 {
        color: #007bff; 
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
        color: #000;
    }

    .text-danger {
        color: #dc3545;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        margin: 10px 0;
        border: none;
        border-radius: 5px;
        color: #fff;
        font-size: 1rem;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn:hover {
        opacity: 0.9;
    }

    footer {
        color: #fff;
        text-align: center;
        padding: 1rem;
        position: absolute;
        bottom: 0;
        width: 100%;
        box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
    }
</style>
<h1><strong>Edit Attendance</strong></h1>

<hr />



<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Date" class="control-label bold-label"><strong>Date and Time</strong></label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label bold-label"><strong>Attendance Status</strong></label>
        <div class="form-check">
            <input type="radio" asp-for="IsPresent" value="true" class="form-check-input" id="present" />
            <label class="form-check-label" for="present">Present</label>
        </div>
        <div class="form-check">
            <input type="radio" asp-for="IsPresent" value="false" class="form-check-input" id="absent" />
            <label class="form-check-label" for="absent">Absent</label>
        </div>
        <span asp-validation-for="IsPresent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudentId" class="control-label bold-label"><strong>Student Name</strong></label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseId" class="control-label bold-label"><strong>Course Name</strong></label>
        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses"></select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdminId" class="control-label bold-label"><strong>Admin Name</strong></label>
        <select asp-for="AdminId" class="form-control" asp-items="ViewBag.Admins"></select>
        <span asp-validation-for="AdminId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
