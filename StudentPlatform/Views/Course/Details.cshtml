@model StudentPlatform.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url("/images/uni2.jpg"); 
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 50px auto;
        background-color: rgba(0, 0, 0, 0.7); 
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px;
        font-size: 2.5rem; 
        font-weight: 900;
        text-transform: uppercase; 
        letter-spacing: 1px; 
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: #fff;
    }

    tr:nth-child(even) {
        background-color: rgba(255, 255, 255, 0.1); 
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    .notice {
        padding: 10px;
        margin-bottom: 20px;
        background-color: rgba(255, 0, 0, 0.7); 
        color: #fff;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
    }

    footer {
        color: #fff;
        text-align: center;
        padding: 1rem;
        position: absolute;
        bottom: 0;
        width: 100%;
        box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container">
    <h2>Course Details</h2>

    <div>
        <h4>Course</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Course Name</dt>
            <dd class="col-sm-10">@Model.CourseName</dd>

            <dt class="col-sm-2">Instructor</dt>
            <dd class="col-sm-10">@Model.Instructor</dd>

            <dt class="col-sm-2">Schedule</dt>
            <dd class="col-sm-10">@Model.Schedule?.ToString("dd-MM-yyyy")</dd>
        </dl>
    </div>

    <div>
        <h4>Assignments</h4>
        @if (Model.Assignments != null && Model.Assignments.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var assignment in Model.Assignments)
                    {
                        <tr>
                            <td>@assignment.Title</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No assignments</p>
        }
    </div>

    <div>
        <h4>Attendances</h4>
        @if (Model.Attendances != null && Model.Attendances.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var attendance in Model.Attendances)
                    {
                        <tr>
                            <td>@attendance.Date.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No attendances</p>
        }
    </div>

    <div>
        <h4>Lectures</h4>
        @if (Model.Lectures != null && Model.Lectures.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lecture in Model.Lectures)
                    {
                        <tr>
                            <td>@lecture.Title</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No lectures</p>
        }
    </div>

    <div>
        <h4>Students</h4>
        @if (Model.Students != null && Model.Students.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students)
                    {
                        <tr>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No students</p>
        }
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
