@model StudentPlatform.Models.Lecture

@{
    ViewData["Title"] = "Lecture Details";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url("/images/uni2.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #fff;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 50px auto;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    h2 {
        color: #007bff;
        margin-bottom: 20px;
        font-size: 2.5rem;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    dl.row {
        margin: 20px 0;
    }

    dt {
        font-weight: bold;
        color: #007bff;
    }

    dd {
        margin-bottom: 10px;
        color: #ddd;
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .btn-primary {
        margin-right: 10px;
    }

    .notice {
        padding: 10px;
        margin-bottom: 20px;
        background-color: rgba(255, 0, 0, 0.7);
        color: #fff;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
    }

    footer {
        color: #fff;
        text-align: center;
        padding: 1rem;
        position: absolute;
        bottom: 0;
        width: 100%;
        box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container">
    <h2><strong>Lecture Details</strong></h2>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Lecture ID:</dt>
            <dd class="col-sm-9">@Model.LectureId</dd>

            <dt class="col-sm-3">Title:</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Material URL:</dt>
            <dd class="col-sm-9">
                <a href="@Model.MaterialUrl" target="_blank">@Model.MaterialUrl</a>
            </dd>

            <dt class="col-sm-3">Date:</dt>
            <dd class="col-sm-9">@Model.Date?.ToShortDateString()</dd>

            <dt class="col-sm-3">Course:</dt>
            <dd class="col-sm-9">
                @Model.Course?.CourseName
                <br />
                <strong>Instructor:</strong> @Model.Course?.Instructor
                <br />
                <strong>Schedule:</strong> @Model.Course?.Schedule
            </dd>
        </dl>
    </div>

    <div>
        <a href="@Url.Action("Edit", "Lecture", new { id = Model.LectureId })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("Index", "Lecture")" class="btn btn-outline-danger">Back to List</a>
    </div>
</div>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
