@model StudentPlatform.Models.Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <style>
        body {
            background-image: url("/images/uni2.jpg"); 
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            color: #fff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .welcome-container {
            display: flex;
            flex-direction: column;
            justify-content: flex-start; 
            align-items: center;
            height: 100vh;
            padding: 2rem;
            padding-top: 5rem; 
            text-align: center;
        }

        .welcome-header {
            font-size: 4rem; 
            font-weight: 700;
            color: #007bff; 
            text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.7);
            margin-bottom: 0; 
        }

        .profile-container {
            width: 100%;
            max-width: 1200px;
            margin: 80px auto;
            background-color: rgba(0,0,0,0.8);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            color: #fff;
            display: flex;
            flex-direction: column;
        }

        .profile-header {
            text-align: center;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border-radius: 8px 8px 0 0;
            font-size: 1.5em;
        }

        .profile-card {
            display: flex;
            flex-direction: row;
            color: #fff;
        }

            .profile-card .left-box,
            .profile-card .right-box {
                padding: 20px;
            }

            .profile-card .left-box {
                flex: 1;
                border-right: 1px solid #ddd;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

                .profile-card .left-box img {
                    width: 150px;
                    height: 150px;
                    border-radius: 50%;
                    border-bottom: 4px solid #007bff;
                }

                .profile-card .left-box h1 {
                    margin: 10px 0;
                    color: #007bff;
                    font-size: 1.5em;
                    text-align: center;
                }

                .profile-card .left-box .info {
                    width: 100%;
                    text-align: center;
                }

                    .profile-card .left-box .info p {
                        margin: 5px 0;
                        font-size: 1em;
                    }

                .profile-card .left-box .buttons {
                    margin-top: 20px;
                }

                    .profile-card .left-box .buttons a {
                        background-color: #007bff;
                        color: #fff;
                        text-decoration: none;
                        border-radius: 4px;
                        padding: 10px 20px;
                        margin: 5px;
                        cursor: pointer;
                        font-size: 0.9em;
                        display: inline-block;
                    }

            .profile-card .right-box {
                flex: 2;
            }

                .profile-card .right-box h2 {
                    margin-top: 0;
                    color: #007bff;
                }

                .profile-card .right-box p {
                    margin: 5px 0;
                }

            .profile-card hr {
                border: 0;
                border-top: 1px solid #ddd;
                margin: 20px 0;
            }

            .profile-card .right-box .personal-info {
                display: flex;
                flex-direction: column;
            }

                .profile-card .right-box .personal-info label {
                    margin-bottom: 5px;
                    font-weight: bold;
                    color: #fff;
                }

                .profile-card .right-box .personal-info input {
                    width: calc(100% - 20px);
                    padding: 10px;
                    margin-bottom: 10px;
                    border: 1px solid #ddd;
                    border-radius: 4px;
                    font-size: 1em;
                    background-color: #fff;
                    color: #000;
                }
    </style>
</head>
<body>
    <div class="profile-container">
        <form action="/Profile/EditProfile" method="post">
            <div class="profile-card">

                <div class="left-box">
                    <img src="https://img.freepik.com/free-vector/hacker-operating-laptop-cartoon-icon-illustration-technology-icon-concept-isolated-flat-cartoon-style_138676-2387.jpg" alt="Profile Picture">
                    <h1><strong>@Model.FirstName @Model.LastName</strong></h1>
                    <div class="info">
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Academic Number:</strong> @Model.AcademicNumber</p>
                    </div>
                    <div class="buttons">
                        <a href="@Url.Action("EditProfile", "Profile")">Edit Profile</a>
                    </div>
                </div>

                <div class="right-box">
                    <h2><strong>Personal Information</strong></h2>
                    <hr>
                    <div class="personal-info">
                        <label for="fullname"><strong>Full Name</strong></label>
                        <input type="text" id="fullname" name="fullname" value="@Model.FirstName @Model.LastName" readonly>

                        <label for="email"><strong>Email</strong></label>
                        <input type="email" id="email" name="email" value="@Model.Email" readonly>

                        <label for="academicNumber"><strong>Academic Number</strong></label>
                        <input type="text" id="academicNumber" name="academicNumber" value="@Model.AcademicNumber" readonly>

                        <label for="idOrPassportNumber"><strong>ID or Passport Number</strong></label>
                        <input type="text" id="idOrPassportNumber" name="idOrPassportNumber" value="@Model.IdOrPassportNumber" readonly>

                        <label for="dateOfBirth"><strong>Date of Birth</strong></label>
                        <input type="date" id="dateOfBirth" name="dateOfBirth" value="@Model.DateOfBirth?.ToString("yyyy-MM-dd")" readonly>

                        <label for="placeOfBirth"><strong>Place of Birth</strong></label>
                        <input type="text" id="placeOfBirth" name="placeOfBirth" value="@Model.PlaceOfBirth" readonly>

                        <label for="nationality"><strong>Nationality</strong></label>
                        <input type="text" id="nationality" name="nationality" value="@Model.Nationality" readonly>

                        <label for="gender"><strong>Gender</strong></label>
                        <input type="text" id="gender" name="gender" value="@Model.Gender" readonly>

                        <label for="religion"><strong>Religion</strong></label>
                        <input type="text" id="religion" name="religion" value="@Model.Religion" readonly>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
